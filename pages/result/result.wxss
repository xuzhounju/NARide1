.Grid {
  display: flex; 
}

.Grid-cell{
  flex: 1;
  margin: 20rpx 10rpx;
  margin-bottom: 9.5rpx;

}
.userinfo{
  flex:0 0 30%;  
  text-align: center;
  color: grey;
  font-size: 23rpx;
}

.infoDetails{
  font-size: 25rpx;
}


.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin: auto;
  display: flex;   
}

.section_title{
  flex:0 0 100%;
  display: flex;
  
  font-weight: bold;
}

.ongoingPost{
  margin: 20rpx 70rpx;
  font-size: 25rpx;
  background: white;
  border-radius: 20rpx;  
}

.gender{
  width:23rpx;
  height: 23rpx;
  margin: auto;
  display: flex;
      
}

.nickName{
  display: inline-flex;
  margin-top:15rpx;
}



