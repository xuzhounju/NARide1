<!--post.wxml-->

<loading hidden="{{loadingHidden}}">
	加载中...
</loading>
<view class="top-margin flex-tab"></view>
<form bindsubmit="formSubmit" bindreset="formReset" id="js-postform">
   <view class= "Grid">
    <view class="Grid-cell 1-1">
      <picker name= "departure" bindchange="bindDeparturePickerChange" value="{{departure}}" range="{{placeArray}}">
        <view class="picker">
           出发地:<span class="long">{{placeArray[departure]}}</span>
        </view>
      </picker>
    </view>
    
  </view>



  <view class= "Grid">
    
    <view class= "Grid-cell 1-2">
      <picker name="arrival" bindchange="bindarrivalPickerChange" value="{{arrival}}" range="{{placeArray}}">
        <view class="picker">
          目的地:<span class='long'>{{placeArray[arrival]}}</span>
        </view>
      </picker>
    </view>
  </view>

  <view class ="Grid">
    <view class="Grid-cell 1-2" >出发时间:</view>
  </view>

  <view class="Grid">
    
    <view class="Grid-cell d2-1">

      <picker name="eDate" mode="date" value="{{eDate}}" start="{{nowDate}}" end="{{endDate}}" bindchange="bindEDateChange">
        <view class="picker">
          日期: <span class="short">{{eDate}}</span>
        </view>
      </picker>
    </view>
    <view class="Grid-cell d2-2">
      <picker name="eTime" mode="time" value="{{eTime}}" bindchange="bindETimeChange">
        <view class="time-picker">
          时间: <span class="short">{{eTime}}</span>
        </view>
      </picker>
      <picker name="lTime" mode="time" value="{{lTime}}" bindchange="bindLTimeChange">
        <view class="time-picker">
          —<span class="short">{{lTime}}</span>
        </view>
      </picker>
    </view>
  </view>




  <view class="Grid">
    <view class="Grid-cell 4-1">
      <picker name="pNumber" bindchange="bindPNumberPickerChange"  range="{{numArray}}">
        <view class="picker">
          乘客数/载客数:<span class="middle">{{pNumber}}</span>
        </view>
      </picker>
    </view>
  </view>

  <view class="Grid memo">
    备注：<input name="memo" maxlength="100" auto-height="true" placeholder="  价格，车型，特殊要求等。"  />
  </view>


    <radio-group class="Grid " bindchange="radioChange">
      <label class="Grid-cell" wx:for="{{identity}}">
        {{item.name}}  <radio value="{{item.value}}" checked="{{item.checked}}"/>     
      </label>
    </radio-group>






  <view class="Grid bottom">
    <view class="term">  
      <checkbox-group bindchange="agreeTerm">
        <checkbox value="true" checked="{{agree}}" />我已阅读并同意<text class="hyperLink" bindtap="clickTerm">《免责申明》</text>
      </checkbox-group>
    </view>
  </view>

  <view class="btn-area">
    <button class="yellowB"formType="submit" >发布拼车</button>
    <button class="greenB"form-type="reset">重置信息</button>
  </view>
</form>


