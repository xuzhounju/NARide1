.shareToGroup{
  display: block; /* Hidden by default */
  position: fixed; /* Stay in place */
  z-index: 3; /* Sit on top */
  top:35%;
  left:100rpx;  
  width: 450rpx; /* Full width */
  height: 25%; /* Full height */
  overflow: auto; /* Enable scroll if needed */
  background: white;
  border-radius: 10rpx;
  padding:50rpx;  
}

.shareTitle{
  font-size: 40rpx;
  font-weight:  500;
}
.shareText{
  margin-top: 50rpx;
  color: gray;
}

