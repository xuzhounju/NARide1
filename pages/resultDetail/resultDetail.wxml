<!--resultDetail.wxml-->
<view class="userinfo">
  <image class="userinfo-avatar" src="{{eventDetail.poster[3]}}" background-size="cover"></image>
  <text class="userinfo-nickname">{{eventDetail.poster[2]}}</text>
</view>

<view class="purpose-container" >
  <view class = "driver" wx:if="{{eventDetail.driver}}">司机</view>
  <view class = "passenger" wx:else> 乘客</view>
</view>


<view class="text-container" >
  <view><span>{{eventDetail.departure+'   '}}</span><arrow>→</arrow><span>{{eventDetail.arrival}}</span></view>
</view>

<view class="text-container" >
  <view>目的地：<span>{{eventDetail.arrival}}</span></view>
</view>

<view class="text-container" >
  <view>最早出发时间：<span>{{eventDetail.earliest}}</span></view>
</view>

<view class="text-container" >
  <view>最晚出发时间：<span>{{eventDetail.latest}}</span></view>
</view>

<view class="text-container" >
  <view>微信号：<span>{{eventDetail.poster[5]}}</span></view>
</view>

<view class="text-container" >
  <view>手机号：<span>{{eventDetail.poster[6]}}</span></view>
</view>

<view class="text-container" >
  <view>人数：<span>{{eventDetail.pNumber}}</span></view>
</view>

<view class="text-container" >
  <view>备注信息：<span>{{eventDetail.memo}}</span></view>
</view>

<view class="btn-area">
    <button class ="copyButton" bindtap="copyWechat">复制微信号</button>
</view>

<view class="btn-area">
    <button bindtap="phoneCall" type="primary">拨打电话</button>
</view>

