<!--first.wxml-->
<form bindsubmit="formSubmit" bindreset="formReset">
  <view class="section">
    <view class="section__title">微信号:</view>
    <view class="section-cell">
      <input name="weixin" placeholder="可不填写" value="{{weixin}} "/>
    </view>
  </view>

  <view class="section">
    <view class="section__title">手机号:</view>
    <view class="section-cell">
      <input name="phone" placeholder="可不填写;如需发布信息，请填写微信或手机" value="{{phone}}" />
    </view>
  </view>

  <view class="section">
    <view class="section__title">email:</view>
    <view class="section-cell" >
      <input name="email" placeholder="可不填写" value="{{email}}"/>
    </view>
  </view>

  <view class="btn-area">
    <button formType="submit"type="primary">提交修改</button>
  </view>

</form>

