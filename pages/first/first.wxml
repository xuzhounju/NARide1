<!--first.wxml-->
<form bindsubmit="formSubmit" bindreset="formReset">
  <view class="section">
    <view class="section__title">微信号:</view>
    <view class="section-cell">
      <input name="weixin" placeholder="必填" value="{{weixin}} " auto-focus/>
    </view>
  </view>

  <view class="section">
    <view class="section__title">手机号:</view>
    <view class="section-cell">
      <input name="phone" placeholder="可不填写" value="{{phone}}" />
    </view>
  </view>

  <view class="section">
    <view class="section__title">email:</view>
    <view class="section-cell" >
      <input name="email" placeholder="必填" value="{{email}}"/>
    </view>
  </view>

  <view class="btn-area">
    <button formType="submit"type="primary">Submit</button>
  </view>

</form>

