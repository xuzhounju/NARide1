<!--first.wxml-->
<form bindsubmit="formSubmit" bindreset="formReset">
  <view class="section">
    <view class="section__title">微信号：</view>
    <input name="weixin" placeholder="必填" value="{{weixin}}"auto-focus/>
  </view>

  <view class="section">
    <view class="section__title">手机号：</view>
    <input name="phone" placeholder="可不填写" value="{{phone}}" auto-focus/>
  </view>

  <view class="section">
    <view class="section__title">email：</view>
    <input name="email" placeholder="必填" value="{{email}}"auto-focus/>
  </view>

  <view class="btn-area">
    <button formType="submit">Submit</button>
  </view>
</form>
